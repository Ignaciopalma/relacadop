                </li>
            </ul>
        </div>
    </nav>

    <!-- Banner Publicitario al cargar pagina -->

    <div id="modal_congreso" class="congreso_modal">
        <span class="banner_close">x</span>
        <img src="" alt="banner_publicitario">    
    </div>


    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content w3-modal-content w3-animate-zoom">
            <span class="close">x</span>
            <p>Envianos un mensaje!</p>
            <%= form_for Message.new do |f| %>
                <%= f.text_field :name, placeholder: "NOMBRE" %> <br>
                <%= f.text_field :email, placeholder: "EMAIL" %> <br>
                <%= f.text_area :message, placeholder: "MENSAJE" %> <br>
                <%= f.submit "Enviar" %>
            <% end  %>
            <%#= mail_to "mraquelmoralesibanez@gmail.com" do %>
              <!-- <strong>O escribenos un mail a:</strong> 
              <span>raquelmoralesibanez@gmail.com</span>
              <span>ddelgatto@gmail.com</span>
              <span>gutierrez@cran.org.cospan</span> -->
            <%# end %>
        </div>
    </div>

    <script>
        window.addEventListener("scroll", function() {
          var nav = document.getElementsByClassName("nav_lista")[0];
          if(window.scrollY > 200) {
            nav.className += " " + "sticky";
            nav.style.top = 0;
          } else if (window.scrollY < 200) {
            nav.classList.remove("sticky");
            nav.style.top = null;
          }
        });

        // Modal formulario de contacto
        var modal = document.getElementById('myModal');
        var btn = document.getElementById("modal_button");
        var span = document.getElementsByClassName("close")[0];
        
        btn.onclick = function() {
            modal.style.display = "block";
        }

        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        window.onclick = function(event) {
            if (event.target == modal_banner) {
                modal_banner.style.display = "none";
            }
        }


        // Banner Publicitario
